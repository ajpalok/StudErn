<div class="nested-fields relative bg-gray-50 rounded-lg p-6 mb-4 border border-gray-200 hover:border-gray-300 transition-colors">
  <!-- Remove Button -->
  <button type="button" class="absolute top-4 right-4 text-gray-400 hover:text-red-500 transition-colors" data-action="click->nested-form#removeItem">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>

  <!-- Education Icon -->
  <div class="flex items-center mb-4">
    <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center mr-3">
      <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
      </svg>
    </div>
    <h4 class="text-lg font-medium text-gray-900">Education Entry</h4>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Degree/Certificate</label>
      <%= f.text_field :degree, placeholder: "e.g., Bachelor of Science in Computer Science", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors" %>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Institution</label>
      <%= f.text_field :institution_name, placeholder: "e.g., United International University", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Start Date</label>
      <%= f.date_field :start_date, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors" %>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">End Date</label>
      <%= f.date_field :end_date, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors" %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Performance Type</label>
      <%= f.select :performance_type, 
          options_for_select([
            ['Select performance type', ''],
            ['Percentage', 'percentage'],
            ['CGPA (out of 4)', 'cgpa_out_of_4'],
            ['CGPA (out of 5)', 'cgpa_out_of_5']
          ], f.object.performance_type), 
          {}, 
          { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors" } %>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Performance</label>
      <%= f.number_field :performance, step: 0.01, placeholder: "e.g., 3.75", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors" %>
    </div>
  </div>

  <div class="mt-4">
    <label class="flex items-center">
      <%= f.check_box :currently_studying, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
      <span class="ml-2 text-sm text-gray-700">Currently studying here</span>
    </label>
  </div>

  <%= f.hidden_field :_destroy %>
</div> 