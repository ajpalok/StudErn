<% content_for :title, "Contact Us" %>

<section class="lg:flex lg:gap-5 py-10 lg:px-20 md:px-10 px-5 text-blue-950">
  <div class="lg:w-1/2 lg:pb-0 pb-10">
    <h2 class="text-[38px] font-bold mb-5">
      Contact <span class="text-primary ">Info</span>
    </h2>
    <p class='pb-5 lg:pr-20'>
      If you have any questions or need further information, please feel free to reach out to us. We are here to assist you with any inquiries you may have regarding our services, projects, or general information. Your feedback and questions are important to us, and we look forward to hearing from you.
    </p>
    <div class="space-y-4">
    
      <div>
        <h4 class="text-lg font-normal">Corporate Office:</h4>

        <address class="flex items-start gap-1 pt-3">
          <span class="text-gray-600">StdErn Pvt. Ltd.</span>
          <span class="text-gray-600">1234, Main Street,</span>
          <span class="text-gray-600">City, State, 123456</span>
        </address>
      </div>
      <div>
        <h4 class="text-lg font-medium">Email</h4>
        <p class="flex items-center gap-2  hover:underline">
         : contact@2haas.com
        </p>
      </div>
      <div>
        <h4 class="text-lg font-medium ">Contact</h4>
        <p class="flex items-center gap-2">: +880 1512 123456</p>
      </div>
    </div>
  </div>
  <div class='lg:w-1/2 flex flex-col text-blue-950 py-6 rounded-xl pt-16 lg:px-10  md:px-16 px-5 bg-slate-50 lg:pt-7'>
      <h2 class="text-xl font-light text-primary mb-6">
          Have Questions? Contact Our Highway Consultancy Team
      </h2>
      <%= form_with model: @contact, url: contact_path, method: :post, html: {class: "space-y-2 w-full"}, data: {turbo: false} do |form| %>
      <%= render "includes/components/error_messages", resource: @contact %>
          <div>
              <%= form.label :name, class: "block text-gray-600 font-semibold mb-1" do %>
                Name <span class='text-red-500'>*</span>
              <% end %>
              <%= form.text_field :name, placeholder: "Enter your name", class: "w-full border-gray-300 rounded-xl px-4 py-1.5 text-gray-800 shadow-sm focus:outline-none" %>
          </div>
          <div>
              <%= form.label :phone, class: "block text-gray-600 font-semibold mb-1" do %>
                Phone Number <span class='text-red-500'>*</span>
              <% end %>
              <%= form.telephone_field :phone, placeholder: "Enter your phone number", class: "w-full border-gray-300 rounded-xl px-4 py-1.5 text-gray-800 shadow-sm focus:outline-none" %>
          </div>
          <div>
              <%= form.label :email, class: "block text-gray-600 font-semibold mb-1" do %>
                Email ID <span class='text-red-500'>*</span>
              <% end %>
              <%= form.email_field :email, placeholder: "you@example.com", class: "w-full border-gray-300 rounded-xl px-4 py-1.5 text-gray-800 shadow-sm focus:outline-none" %>
          </div>
          <div>
              <%= form.label :message, class: "block text-gray-600 font-semibold mb-1" do %>
                Message <span class='text-red-500'>*</span>
              <% end %>
              <%= form.text_area :message, placeholder: "Enter your message", class: "w-full border-gray-300 rounded-xl px-4 py-1.5 text-gray-800 shadow-sm focus:outline-none", rows: 5 %>
          </div>
          <div class='flex justify-center'>
              <button type="submit" class="btn btn-primary">
                  Submit
              </button>
          </div>
      <% end %>
  </div>
</section>