<% if resource.errors.any? %>
  <div class="flex flex-col mb-5 border-l-4 border-l-[var(--color-primary)] border-solid bg-white p-[12px]">
    <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li class="mb-1"><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>
