<% unless params[:paymentID].present? && params[:status].present?   %>
<%# show payment option %>

<h2 class="text-center text-4xl lg:text-6xl font-bold my-6"> Pay Now </h2>
<h3 class="text-center text-2xl lg:text-4xl font-semibold my-6"> Click On Preferred Package </h3>

<div class="flex flex-row flex-wrap justify-center mx-auto max-w-screen-lg gap-12 my-12">

  <% @PayPackages.map do |package| %>

    <a href="?package=<%= package[:name] %>" class="relative w-full sm:w-1/3 h-auto bg-gray-900 block p-6 border border-gray-100 rounded-lg">
        <span class="absolute inset-x-0 bottom-0 h-2 bg-gradient-to-r from-green-300 via-blue-500 to-purple-600"></span>

        <div class="my-4">
            <h2 class="text-white text-2xl font-bold pb-2"><%= package[:name] %></h2>
            <p class="text-gray-300 text-4xl font-semibold py-1"><%= package[:price] %> à§³</p>
            <ul class="text-gray-300 py-1 list-disc list-inside">
              <% package[:description].each do |desc| %>
                <li><%= desc %></li>
              <% end %>
            </ul>
        </div>
    </a>
  <% end %>

</div>

<% else %>
  <div class="text-center">
    <h3 class="text-lg font-semibold my-6">Invalid request. Please try again.</h3>
  </div>
<% end %>
