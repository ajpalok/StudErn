<% content_for :title, "Recruiter Dashboard" %>

<div class="min-h-screen bg-gray-50">
  <!-- Header Section -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Welcome back, <%= current_recruiter.full_name %>!</h1>
          <p class="mt-1 text-gray-600">Here's what's happening with your recruitment activities today.</p>
        </div>
        <div class="flex items-center gap-3">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Active
          </span>
          <span class="text-sm text-gray-500">
            Last login: <%= time_ago_in_words(current_recruiter.last_sign_in_at || current_recruiter.created_at) %> ago
          </span>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Companies -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Total Companies</p>
            <p class="text-2xl font-bold text-gray-900"><%= @stats[:total_companies] %></p>
          </div>
        </div>
      </div>

      <!-- Active Recruitments -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2V6" />
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Active Recruitments</p>
            <p class="text-2xl font-bold text-gray-900"><%= @stats[:active_recruitments] %></p>
            <p class="text-xs text-gray-500">of <%= @stats[:total_recruitments] %> total</p>
          </div>
        </div>
      </div>

      <!-- Total Applications -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Total Applications</p>
            <p class="text-2xl font-bold text-gray-900"><%= @stats[:total_applications] %></p>
            <p class="text-xs text-gray-500"><%= @stats[:this_month_applications] %> this month</p>
          </div>
        </div>
      </div>

      <!-- Pending Applications -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-yellow-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Pending Review</p>
            <p class="text-2xl font-bold text-gray-900"><%= @stats[:pending_applications] %></p>
            <p class="text-xs text-gray-500">applications</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Left Column: Recent Activities -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Recent Recruitments -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-lg font-semibold text-gray-900">Recent Recruitments</h2>
              <%= link_to "View All", "#", class: "text-sm text-primary hover:underline" %>
            </div>
          </div>
          <div class="p-6">
            <% if @recent_recruitments.any? %>
              <div class="space-y-4">
                <% @recent_recruitments.each do |recruitment| %>
                  <div class="flex items-center justify-between p-4 border border-gray-100 rounded-lg hover:bg-gray-50">
                    <div class="flex-1">
                      <h3 class="font-medium text-gray-900"><%= recruitment.title %></h3>
                      <p class="text-sm text-gray-600"><%= recruitment.company.name %></p>
                      <div class="flex items-center gap-4 mt-2">
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium
                          <%= recruitment.application_collection_status == 'open' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                          <%= recruitment.application_collection_status.titleize %>
                        </span>
                        <span class="text-xs text-gray-500">
                          <%= time_ago_in_words(recruitment.created_at) %> ago
                        </span>
                      </div>
                    </div>
                    <div class="flex items-center gap-2">
                      <%= link_to "View", recruitment_path(recruitment), 
                          class: "text-sm text-primary hover:underline" %>
                      <%= link_to "Edit", "#", class: "text-sm text-gray-600 hover:underline" %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2V6" />
                </svg>
                <p class="mt-2 text-gray-500">No recruitments yet</p>
                <%= link_to "Create First Recruitment", recruiter_recruitment_publish_path, 
                    class: "mt-2 inline-flex items-center px-4 py-2 bg-primary text-white rounded-md hover:bg-primary/90" %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Recent Applications -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-lg font-semibold text-gray-900">Recent Applications</h2>
              <%= link_to "View All", "#", class: "text-sm text-primary hover:underline" %>
            </div>
          </div>
          <div class="p-6">
            <% if @recent_applications.any? %>
              <div class="space-y-4">
                <% @recent_applications.each do |application| %>
                  <div class="flex items-center justify-between p-4 border border-gray-100 rounded-lg hover:bg-gray-50">
                    <div class="flex items-center space-x-4">
                      <div class="flex-shrink-0">
                        <div class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center">
                          <span class="text-sm font-medium text-gray-600">
                            <%= application.user.first_name&.first&.upcase || 'U' %>
                          </span>
                        </div>
                      </div>
                      <div class="flex-1">
                        <h3 class="font-medium text-gray-900">
                          <%= application.user.full_name %>
                        </h3>
                        <p class="text-sm text-gray-600">
                          Applied for <%= application.recruitment.title %>
                        </p>
                        <p class="text-xs text-gray-500">
                          <%= time_ago_in_words(application.created_at) %> ago
                        </p>
                      </div>
                    </div>
                    <div class="flex items-center gap-2">
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium
                        <%= case application.status
                            when 'pending'
                              'bg-yellow-100 text-yellow-800'
                            when 'approved'
                              'bg-green-100 text-green-800'
                            when 'rejected'
                              'bg-red-100 text-red-800'
                            else
                              'bg-gray-100 text-gray-800'
                            end %>">
                        <%= application.status&.titleize || 'Pending' %>
                      </span>
                      <%= link_to "Review", "#", class: "text-sm text-primary hover:underline" %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <p class="mt-2 text-gray-500">No applications yet</p>
                <p class="text-sm text-gray-400">Applications will appear here once candidates apply</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Right Column: Quick Actions & Company Overview -->
      <div class="space-y-8">
        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Quick Actions</h2>
          </div>
          <div class="p-6 space-y-3">
            <%= link_to recruiter_recruitment_publish_path, 
                class: "flex items-center p-3 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors" do %>
              <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
              <span>Post New Recruitment</span>
            <% end %>

            <%= link_to edit_recruiter_registration_path, 
                class: "flex items-center p-3 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors" do %>
              <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span>Edit Profile</span>
            <% end %>

            <%= link_to recruiter_account_complete_path, 
                class: "flex items-center p-3 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors" do %>
              <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <span>Manage Companies</span>
            <% end %>

            <%= link_to "#", 
                class: "flex items-center p-3 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors" do %>
              <svg class="w-5 h-5 mr-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              <span>View Analytics</span>
            <% end %>
          </div>
        </div>

        <!-- Company Overview -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Your Companies</h2>
          </div>
          <div class="p-6">
            <% if @companies.any? %>
              <div class="space-y-4">
                <% @companies.each do |company| %>
                  <div class="border border-gray-200 rounded-lg p-4">
                    <div class="flex items-start justify-between">
                      <div class="flex-1">
                        <h3 class="font-medium text-gray-900"><%= company.name %></h3>
                        <% if company.tagline.present? %>
                          <p class="text-sm text-gray-600 mt-1"><%= company.tagline %></p>
                        <% end %>
                        <div class="flex items-center gap-4 mt-2">
                          <span class="text-sm text-gray-500">
                            <%= company.recruitments.count %> recruitments
                          </span>
                          <span class="text-sm text-gray-500">
                            <%= company.recruitments.where(application_collection_status: "open").count %> active
                          </span>
                        </div>
                      </div>
                      <div class="flex items-center gap-2">
                        <%= link_to "View", recruiter_company_path(company), 
                            class: "text-sm text-primary hover:underline" %>
                        <%= link_to "Manage", "#", class: "text-sm text-gray-600 hover:underline" %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-6">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                <p class="mt-2 text-gray-500">No companies yet</p>
                <%= link_to "Join a Company", recruiter_account_complete_path, 
                    class: "mt-2 inline-flex items-center px-4 py-2 bg-primary text-white rounded-md hover:bg-primary/90" %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Pending Requests -->
        <% if @pending_requests.any? %>
          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
            <div class="flex items-start">
              <svg class="h-5 w-5 text-yellow-400 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-yellow-800">Pending Join Requests</h3>
                <div class="mt-2 text-sm text-yellow-700">
                  <p>You have <%= @pending_requests.count %> pending company join request(s).</p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>