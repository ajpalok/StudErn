<% content_for :title, "Edit Recruiter Profile" %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4">
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center gap-3 mb-6">
        <div class="p-2 bg-primary/10 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-900">Edit Recruiter Profile</h1>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "recruiters/shared/error_messages", resource: resource %>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <!-- Left Column: Personal Information -->
          <div class="space-y-6">
            <!-- Personal Information Section -->
            <div class="border border-gray-200 rounded-lg p-6">
              <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                Personal Information
              </h2>
              
              <!-- First and Last Name in a row -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
                  <%= f.text_field :first_name, 
                      class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary", 
                      autofocus: true, 
                      autocomplete: "given-name",
                      placeholder: "Enter your first name" %>
                </div>
                <div>
                  <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
                  <%= f.text_field :last_name, 
                      class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary", 
                      autocomplete: "family-name",
                      placeholder: "Enter your last name" %>
                </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                <div>
                  <%= f.label :gender, class: "block text-sm font-medium text-gray-700" %>
                  <%= f.select :gender, 
                      Recruiter.genders.map { |key, value| [key.titleize, value] }, 
                      { prompt: "Select Gender" },
                      class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary" %>
                </div>
                <div>
                  <%= f.label :phone, class: "block text-sm font-medium text-gray-700" %>
                  <%= f.text_field :phone, 
                      class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary", 
                      autocomplete: "tel",
                      placeholder: "01XXXXXXXXX" %>
                  <p class="text-xs text-gray-500 mt-1">Enter your Bangladeshi phone number</p>
                </div>
              </div>
            </div>

            <!-- Account Information Section -->
            <div class="border border-gray-200 rounded-lg p-6">
              <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                Account Information
              </h2>
              
              <div>
                <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
                <%= f.email_field :email, 
                    class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary", 
                    autocomplete: "email",
                    placeholder: "your.email@example.com" %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div class="mt-4 text-yellow-700 bg-yellow-50 border-l-4 border-yellow-400 p-3 rounded">
                  <div class="flex">
                    <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                    <div class="ml-3">
                      <p class="text-sm">
                        Currently waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong>
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Password Change Section -->
            <div class="border border-gray-200 rounded-lg p-6">
              <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                Change Password
              </h2>
              <p class="text-sm text-gray-600 mb-4">Leave these fields blank if you don't want to change your password.</p>
              
              <div class="space-y-4">
                <div>
                  <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
                  <%= f.password_field :password, 
                      autocomplete: "new-password", 
                      class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary",
                      placeholder: "Enter new password" %>
                  <% if @minimum_password_length %>
                    <p class="text-xs text-gray-500 mt-1"><%= @minimum_password_length %> characters minimum</p>
                  <% end %>
                </div>

                <div>
                  <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
                  <%= f.password_field :password_confirmation, 
                      autocomplete: "new-password", 
                      class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary",
                      placeholder: "Confirm new password" %>
                </div>
              </div>
            </div>

            <!-- Current Password Section -->
            <div class="border border-gray-200 rounded-lg p-6">
              <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Confirm Changes
              </h2>
              <p class="text-sm text-gray-600 mb-4">We need your current password to confirm your changes.</p>
              
              <div>
                <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
                <%= f.password_field :current_password, 
                    autocomplete: "current-password", 
                    class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary",
                    placeholder: "Enter your current password" %>
              </div>
            </div>
          </div>

          <!-- Right Column: Company Management -->
          <div class="space-y-6">
            <!-- Current Company Associations -->
            <div class="border border-gray-200 rounded-lg p-6">
              <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                Company Associations
              </h2>

              <% current_companies = resource.companies.includes(:recruiter_permissions_on_companies) %>
              <% if current_companies.any? %>
                <div class="space-y-3">
                  <% current_companies.each do |company| %>
                    <% permission = company.recruiter_permissions_on_companies.find { |rpc| rpc.recruiter_id == resource.id } %>
                    <div class="border border-gray-200 rounded-lg p-4">
                      <div class="flex items-start justify-between">
                        <div class="flex-1">
                          <h3 class="font-medium text-gray-900"><%= company.name %></h3>
                          <% if company.tagline.present? %>
                            <p class="text-sm text-gray-600 mt-1"><%= company.tagline %></p>
                          <% end %>
                          <div class="flex items-center gap-4 mt-2">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                              <%= case permission&.recruiter_status
                                  when 'approved'
                                    'bg-green-100 text-green-800'
                                  when 'pending'
                                    'bg-yellow-100 text-yellow-800'
                                  when 'rejected'
                                    'bg-red-100 text-red-800'
                                  when 'blocked'
                                    'bg-gray-100 text-gray-800'
                                  else
                                    'bg-gray-100 text-gray-800'
                                  end %>">
                              <%= permission&.recruiter_status&.titleize || 'Unknown' %>
                            </span>
                            <span class="text-sm text-gray-500">
                              Position: <%= permission&.recruiter_position || 'Not specified' %>
                            </span>
                          </div>
                        </div>
                        <div class="flex items-center gap-2">
                          <%= link_to "View", recruiter_company_path(company), 
                              class: "text-sm text-primary hover:underline",
                              target: "_blank" %>
                          <% if permission&.recruiter_status == 'pending' %>
                            <span class="text-xs text-gray-500">Awaiting approval</span>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <div class="text-center py-8">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-400 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                  <p class="text-gray-500 mb-4">You are not associated with any companies yet.</p>
                  <%= link_to "Join a Company", recruiter_account_complete_path, 
                      class: "inline-flex items-center px-4 py-2 bg-primary text-white rounded-md hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2" %>
                </div>
              <% end %>
            </div>

            <!-- Company Search and Join -->
            <div class="border border-gray-200 rounded-lg p-6">
              <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
                Find & Join Companies
              </h2>
              
              <div class="space-y-4">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Search Companies</label>
                  <div class="relative">
                    <input type="text" 
                           id="company-search" 
                           placeholder="Search for companies to join..."
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-primary focus:border-primary">
                    <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                      <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                      </svg>
                    </div>
                  </div>
                  <div id="search-results" class="mt-2 space-y-2 hidden"></div>
                </div>

                <div class="flex items-center gap-4">
                  <%= link_to "Browse All Companies", "#", 
                      class: "text-sm text-primary hover:underline" %>
                  <%= link_to "Create New Company", recruiter_account_complete_path, 
                      class: "text-sm text-primary hover:underline" %>
                </div>
              </div>
            </div>

            <!-- Account Status Information -->
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
              <div class="flex items-start">
                <svg class="h-5 w-5 text-blue-400 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-blue-800">Account Status</h3>
                  <div class="mt-2 text-sm text-blue-700">
                    <p>Your account is currently: <span class="font-semibold"><%= resource.account_status.titleize %></span></p>
                    <% if resource.account_status == "incomplete" %>
                      <p class="mt-1">Complete your profile and join a company to access all features.</p>
                    <% elsif resource.account_status == "suspended" %>
                      <p class="mt-1">Your account has been suspended. Please contact support for assistance.</p>
                    <% elsif resource.account_status == "closed" %>
                      <p class="mt-1">Your account has been closed.</p>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-end border-t border-gray-200 pt-6">
          <%= link_to "Cancel", :back, 
              class: "px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2" %>
          <%= f.submit "Update Profile", 
              class: "px-6 py-2 bg-primary text-white rounded-md hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 transition-colors" %>
        </div>
      <% end %>
    </div>

    <!-- Account Cancellation Section -->
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mt-6">
      <div class="flex items-start">
        <svg class="h-5 w-5 text-red-400 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        <div class="ml-3 flex-1">
          <h3 class="text-lg font-semibold text-red-700">Danger Zone</h3>
          <p class="mt-1 text-red-600">Once you delete your account, there is no going back. Please be certain.</p>
          <div class="mt-4">
            <%= button_to "Delete Account", 
                registration_path(resource_name), 
                data: { 
                  confirm: "Are you absolutely sure? This action cannot be undone.", 
                  turbo_confirm: "Are you absolutely sure? This action cannot be undone." 
                }, 
                method: :delete, 
                class: "bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Navigation -->
    <div class="mt-6 flex items-center justify-between">
      <%= link_to "â† Back to Dashboard", recruiter_index_path, class: "text-primary hover:underline flex items-center gap-1" %>
      <%= link_to "View Profile", recruiter_profile_path, class: "text-primary hover:underline flex items-center gap-1" %>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const companySearch = document.getElementById('company-search');
  const searchResults = document.getElementById('search-results');
  let searchTimeout;

  companySearch.addEventListener('input', function() {
    clearTimeout(searchTimeout);
    const query = this.value.trim();
    
    if (query.length < 2) {
      searchResults.classList.add('hidden');
      return;
    }

    searchTimeout = setTimeout(() => {
      fetch('/recruiter/account_complete_post', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
        },
        body: JSON.stringify({
          type: 'account_completing_company_search',
          company_name: query
        })
      })
      .then(response => response.json())
      .then(data => {
        if (data.companies && data.companies.length > 0) {
          searchResults.innerHTML = data.companies.map(company => `
            <div class="border border-gray-200 rounded-lg p-3 hover:bg-gray-50 cursor-pointer">
              <div class="flex items-center justify-between">
                <div>
                  <h4 class="font-medium text-gray-900">${company.name}</h4>
                </div>
                <a href="/recruiter/account_complete/company/${company.id}" 
                   class="text-sm text-primary hover:underline">
                  Join Company
                </a>
              </div>
            </div>
          `).join('');
          searchResults.classList.remove('hidden');
        } else {
          searchResults.innerHTML = '<p class="text-gray-500 text-sm">No companies found</p>';
          searchResults.classList.remove('hidden');
        }
      })
      .catch(error => {
        console.error('Error searching companies:', error);
        searchResults.innerHTML = '<p class="text-red-500 text-sm">Error searching companies</p>';
        searchResults.classList.remove('hidden');
      });
    }, 300);
  });

  // Hide search results when clicking outside
  document.addEventListener('click', function(e) {
    if (!companySearch.contains(e.target) && !searchResults.contains(e.target)) {
      searchResults.classList.add('hidden');
    }
  });
});
</script>
